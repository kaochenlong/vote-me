<h1>候選人列表</h1>
<%= link_to "新增候選人", new_candidate_path %>


<div class="candidate-list">
  <%= paginate @candidates %>

  <% @candidates.each do |candidate| %>
  <!-- 候選人 start -->
  <div class="candidate-card">
    <div class="avatar">
      <img src="https://images.unsplash.com/photo-1518791841217-8f162f1e1131?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80">
    </div>
    <div class="info">
      <h2>得票數：<%= candidate.vote %></h2>
      <h1><%= candidate.name %>(<%= candidate.age %>)</h1>
      <h2><%= candidate.party %></h2>
      <%= link_to "政見", candidate, class: 'btn more-detail' %>
      <%= link_to "投票", vote_candidate_path(candidate), method: "patch", class: 'btn vote', data: { confirm: '確定進行投票?!' } %>
      <%= link_to "修改", edit_candidate_path(candidate), class: 'btn update' %>
      <%= link_to "刪除", candidate, method: 'delete', class: 'btn destroy', data: { confirm: '確認刪除?!'} %>
    </div>
  </div>
  <!-- 候選人 end -->
  <% end %>
</div>